#include<stdio.h>
#include<stdlib.h>
#include<string.h>
void pop(int);
void push(int);
void display();
void peek();
struct node
{
	int data;
	struct node * next;
 };
  struct node* top;
int main()
{
	int choice;
    struct node* nextnode;
    nextnode = (struct node* ) malloc(sizeof(struct node));
   while (1)
   {
   	printf("\n\t\t..... Stack Menu ......\n\n");
    printf("\t\t0.Exit\n");
    printf("\t\t1.Push\n");
    printf("\t\t2.Display\n");
    printf("\t\t3.Pop\n");
    printf("\t\t4.Peek/Top element");
    printf("\n\t\t...............................\n\n");
	printf("input choice : ");
	scanf("%d",&choice);
	switch(choice)
	{
	case 0:
	    exit(0);
	    break;
	case 1:
		printf("\nInput Data: ");
		scanf("%d",&nextnode->data);
	    push(nextnode->data);
	break;
    case 2:
	    display();
	    break;
	case 3:
	    pop(nextnode->data);
	    break;
	case 4:
	    peek();
	    break;
	default:
	    printf("\nWrong Choice\n");	
    }
}
	
}

void peek()
{
	if(top!=0)
	printf("\n...Top element : %d",top->data);
}
void display()
{
	struct node * temp;
	temp = top;
	int count =0;
	printf("\n\n...Stack elements.....\n\n"); 
	while(temp!=0)
	{  
	    count++;
	    printf("\nStack element%d:  %d",count, temp->data);
		temp=temp->next;
	}
}
void pop(int x)  
{
	struct node * temp;
	 temp=top;
	 if(top!=0)
	 {
	 
	 printf("\nPopped element: %d",top->data);
	 top =top->next;
	 free(temp);
     }
	 else
	 {
	   printf("\n No element");
	 }

}
void push(int x)
{
	struct node *nextnode;
    nextnode = (struct node*) malloc(sizeof(struct node));
	printf("\nData inserted: %d ",x);
	nextnode->data =x;
	nextnode ->next =top;
	top = nextnode;
			
	}
	
